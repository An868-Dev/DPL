{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "anicla",
  "version": "0.1.0",
  "identifier": "com.team4dua.anicla",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Anicla",
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "width": 1100,
        "height": 600,
        "minWidth": 1100,
        "minHeight": 600,
        "resizable": true,
        "transparent": true,
        "backgroundColor": "#00000000",
        "decorations": false,
        "acceptFirstMouse": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
